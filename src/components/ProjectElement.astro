---
interface Props {
  name: string;
  subline: string;
  imgURL: string;
}
const { name, subline, imgURL } = Astro.props;
---

<a href={imgURL}
  ><div
    class="duration-200 bg-neutral-800 print:bg-transparent shadow-2xl print:shadow-none px-4 hover:invert flex items-center text-xl sm:text-lg h-[100px] print:h-fit print:py-2"
  >
    <div class="border-2 h-[80%] md:h-fit border-gray-600 overflow-hidden mr-4">
      <img
        src="https://placehold.co/100x100"
        alt="Logo"
        width="1"
        height="1"
        class="h-full w-full object-cover object-center"
      />
    </div>
    <div class="flex flex-col items-start justify-center text-left">
      <div class="text-base sm:text-lg font-semibold">{name}</div>
      <div
        class="text-sm sm:text-base font-light relative bottom-[4px] text-white/90 print:text-black/90"
      >
        {subline}
      </div>
    </div>
  </div></a
>
