<script defer>
fetch("https://np.vsahni.me").then((data) => {
  let nowPlayingLoading = document.getElementById("nowPlayingLoading");
  let nowPlaying = document.getElementById("nowPlaying");
  data.json().then((json) => {
    if (
      json.statusCode !== 200 ||
      json.track.external_urls.spotify === undefined
    ) {
      nowPlaying.innerText = " Silence...";
    } else if (json.statusCode === 200) {
      let artists = json.track.artists
        .map((artist) => artist.name)
        .join(", ");
      nowPlaying.innerText = " " + json.track.name + " by " + artists;
      nowPlaying.setAttribute("href", json.track.external_urls.spotify);
    }
    nowPlayingLoading.style.opacity = "0";
    nowPlaying.style.opacity = "1";
    setTimeout(() => {
      nowPlayingLoading.style.display = "none";
    }, 600);
  });
});
</script>
