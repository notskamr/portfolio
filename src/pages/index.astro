---
import Icon from "astro-icon";
import Layout from "../layouts/Layout.astro";
import EducationElement from "../components/EducationElement.astro";
import ProjectElement from "../components/ProjectElement.astro";
---

<Layout title="vsahni">
  <main
    class="mx-auto max-w-screen-md scroll-smooth motion-reduce:scroll-auto font-sans text-white print:text-black print:max-w-none py-8 px-4 print:px-0 print:py-0 drop-shadow-xl print:drop-shadow-none"
  >
    <h1 class="text-4xl font-bold">
      <span class="print:hidden"
        >Hi 👋 <br />
        <div class="font-medium">
          I'm <span
            class="text-orange-500 sm:inline-flex sm:flex-row sm:items-end"
            >Varun Sahni<br /><span
              class="hidden sm:inline sm:pl-2 sm:pb-1 text-xl text-neutral-500 font-mono italic"
              >(aka skamr)</span
            ></span
          >
        </div></span
      >
      <span class="hidden print:block print:text-center">Varun Sahni</span>
      <span
        class="hidden print:block print:text-center text-base font-light relative left-1"
        >Gurugram, India</span
      >
    </h1>
    <hr class="print:hidden" />
    <div
      id="socials"
      class="print:hidden flex items-center gap-4 mt-3 child:underline child:underline-offset-2 child:text-blue-300 child:duration-200 child-hover:text-amber-500 child-hover:scale-125 child:w-[28px] shadow-amber-400 child-hover:drop-shadow-[0_2px_8px_#fbbf24aa]"
    >
      <a href="https://github.com/notskamr" title="GitHub"
        ><Icon name="ri:github-line" /></a
      >
      <a href="/blog" title="Blog"><Icon name="icomoon-free:blog" /></a>
      <a href="mailto:contact@vsahni.me" title="E-mail" class="!w-[30px]"
        ><Icon name="ic:outline-mail" /></a
      >
      <button
        class="!w-[30px]"
        type="button"
        title="Print Resume"
        id="print-resume"
      >
        <Icon name="mi:print" />
      </button>
    </div>
    <hr />
    <p class="print:hidden">
      I'm a high school student from India. I love everything computers from
      web-dev to computer engineering to networking and so on... I'm also a huge
      fan of open-source software and I try to contribute to it as much as I
      can. My main interest nowadays is Computer Engineering, specifically
      Computer Architecture - I just find learning how computers work extremely
      fascinating and I'm trying to learn as much as I can about it <i
        >(there's so much abstraction!)</i
      >
      <br />
      <br />
       I'm also a huge fan of music, film, VFX and editing. See more about it in
      my <a href="interests">Interests</a>
    </p>
    <hr class="print:hidden" />
    <section id="education">
      <h2
        class="text-2xl md:text-3xl text-yellow-500 print:text-black font-semibold underline underline-offset-[8px] mb-2"
      >
        Education/Courses
      </h2>
      <div id="education-content">
        <EducationElement
          name="The Shri Ram School, Moulsari"
          subline={`- IBDP Year 1 Student <br> - Completed IGCSE, 9 A*s`}
          sublineMobile={`- IBDP Year 1 Student <br> - Completed IGCSE, 9 A*s`}
          dates="2018-Present"
          location="Gurugram, HR, IN"
        />
        <EducationElement
          name={`<a class="underline underline-offset-2 print:no-underline" href="https://courses.edx.org/certificates/42202c295c1e4969b6543af1026b86d3" target="_blank" rel="noopener noreferrer">Harvard's CS50x</a>`}
          dates="2022"
          location="Online"
          subline={`Finished with verified certificate. Created <a class="underline underline-offset-2 print:no-underline" href="https://firewood.vsahni.me/" target="_blank" rel="noopener noreferrer">Firewood</a> as a final project.`}
          sublineMobile={`Finished with verified certificate. Created <a class="underline underline-offset-2 print:no-underline" href="https://firewood.vsahni.me/" target="_blank" rel="noopener noreferrer">Firewood</a> as a final project.`}
        />
        <EducationElement
          name="Plaksha University, Young Tech Scholars"
          dates="June 2022"
          location=""
          subline="Attended Plaksha's two-week YTS Program. Built a self-navigating robot using LIDAR, ultrasound and infrared sensors with Arduino and C++ from scratch."
          sublineMobile="Summer program: Built a self-navigating robot using LIDAR, ultrasound and infrared sensors with Arduino and C++ from scratch."
        />
        <EducationElement
          name="University of California, Berkeley"
          dates="June 2023-August 2023"
          location="Berkeley, CA, USA"
          subline="Completed CS61C and DATA 8 at UC Berkeley's pre-college summer program with a 3.5 GPA (A- and B+ respectively)"
          sublineMobile="Summer program: CS61C (A-), DATA8 (B+); 3.5GPA"
        />
      </div>
    </section>
    <hr />
    <section id="projects">
      <h2
        class="text-2xl md:text-3xl text-yellow-500 print:text-black font-semibold underline underline-offset-[8px] mb-[min(2.3vh,2.5rem)]"
      >
        Projects
      </h2>
      <div
        id="projects-content"
        class="grid md:grid-cols-2 print:grid-cols-2 gap-4"
      >
        <ProjectElement
          name="Firewood"
          subline="A super-simple video calling website"
          href="https://firewood.vsahni.me/"
          imgURL="/assets/fw-logo.png"
          invertLogoOnHover={false}
          rootDivClass="hover:!bg-amber-300 hover:!shadow-amber-400 relative z-[99]"
          imgDivClass="drop-shadow-[2px_2px_2px_#000F]"
        />
        <ProjectElement
          name="Parallelized"
          subline="Interschool code optimization competition"
          href="https://parallelized.in"
          imgURL="/assets/parallelized-small.svg"
          invertLogoOnHover={true}
          invertLogoWhenPrint={true}
          rootDivClass="hover:!bg-violet-200 hover:!shadow-violet-300 relative z-[98]"
          imgDivClass="drop-shadow-[2px_2px_2px_#000F]"
        />
        <ProjectElement
          name="CS61CPU"
          subline="My favorite project from CS61C at UC Berkeley; RISC-V CPU in Logisim"
          href="https://inst.eecs.berkeley.edu/~cs61c/su23/projects/proj3/"
          imgURL="/assets/cs61c.webp"
          invertLogoOnHover={false}
          rootDivClass="hover:!bg-teal-200 hover:!shadow-teal-400 relative z-[97]"
          imgDivClass="group-hover:child:saturate-200 drop-shadow-[0px_2px_1px_#000F]"
        />
        <ProjectElement
          name="kNN Movie Classification"
          subline="My favourite DATA8 project; kNN movie classifier based on word usage"
          href="#"
          imgURL="/assets/data8.webp"
          invertLogoOnHover={false}
          rootDivClass="hover:!bg-blue-300 hover:!shadow-blue-400 relative z-[96]"
          imgDivClass="group-hover:child:saturate-200 drop-shadow-[2px_2px_2px_#000F]"
        />
        <ProjectElement
          name="CortX"
          subline={"Medical management web-app, won ShriTeq Hackathon 2022."}
          href="https://urls.vsahni.me/cortx"
          imgURL="/assets/cortx.webp"
          invertLogoOnHover={false}
          rootDivClass="hover:!bg-rose-300 hover:!shadow-rose-400 !py-[1ex] relative z-[95]"
          imgDivClass="drop-shadow-[2px_2px_2px_#000F]"
        />
        <ProjectElement
          name="MusicAI 2023"
          subline="Quiz-based game for awareness about AI-generated music, played by 150+ students"
          href="https://urls.vsahni.me/musicai2023"
          imgURL="/assets/musicai-white.svg"
          rootDivClass="hover:!bg-red-200 hover:!shadow-red-300 relative z-[94]"
          imgDivClass=""
        />
        <ProjectElement
          name="KageMod: Minecraft Mod"
          subline="Minecraft mod with ~20K downloads"
          href="https://www.curseforge.com/minecraft/mc-mods/kagemod"
          imgURL="/assets/kagemod.webp"
          invertLogoOnHover={false}
          rootDivClass="hover:!bg-blue-200 hover:!shadow-slate-500 relative z-[93]"
          imgDivClass="p-1"
        />
        <ProjectElement
          name="Editing Community"
          subline="VFX and Editing Community with 100k+ site visits"
          href="javascript:void(0);"
          inNewTab={false}
          imgURL="/assets/editing-community.webp"
          rootAnchorClass="cursor-default"
          rootDivClass="hover:!bg-white hover:!shadow-white !shadow-3xl relative z-[92]"
        />
        <!-- <ProjectElement
          name="Intelliger"
          subline="Productivity app for students with a pomodoro timer, to-do list, notes and more"
          href="#"
          rootAnchorClass="active:pointer-events-none"
          imgURL="/assets/intelliger.webp"
          rootDivClass="relative z-[91]"
        /> -->
      </div>
    </section>
    <hr />
    <section id="awards">
      <h2
        class="text-2xl md:text-3xl text-yellow-500 print:text-black font-semibold underline underline-offset-[8px] mb-5"
      >
        Awards
      </h2>
      <ol class="list-['🏅'] pl-5 text-base md:text-lg child:pl-2 child:mb-2">
        <li>1st Place, ShriTeq Hack-a-thon 2022</li>
        <li>"The Shri Ram School, Moulsari" Innovator Award 2023 x 2</li>
        <li>DIGEX 2023 Hi-Res (Documentary Competition) Runner's Up</li>
      </ol>
    </section>
    <hr />
    <section id="interests">
      <h2
        class="text-2xl md:text-3xl text-yellow-500 print:text-black font-semibold underline underline-offset-[8px] mb-4"
      >
        Interests
      </h2>
      <div class="pl-1 print:pl-0 relative bottom-[14px] -mb-[14px]">
        <div
          class="border-l-yellow-500 print:border-none border-l-[5px] h-[8px] pt-6 print:pt-2"
        >
        </div>
        <div
          class="border-l-orange-500 print:border-none border-l-[5px] h-fit flex flex-row"
        >
          <div
            class="h-[38px] w-[38px] md:h-[48px] md:w-[48px] relative right-[21px] md:right-[26px] print:hidden bg-orange-600 rounded-full"
          >
            <Icon
              name="uil:music"
              class="h-[38px] md:h-[48px] p-2 object-contain drop-shadow-[2px_2px_0px_#000F] relative right-[1px] bottom-[1px]"
            />
          </div>
          <div class="relative right-[13px] print:right-0 flex flex-col pt-2">
            <h2 class="text-xl md:text-2xl font-bold">Music</h2>
            <ol class="pl-5 text-base md:text-lg child:pl-2 child:mb-2 pt-1">
              <li class="list-['🎸']">I love most genres of music</li>
              <li class="list-['🎤']">
                I like to sing! Currently in Grade 3 of Rockschool Vocals.
              </li>
              <li class="list-['👨🏼‍🎤']">
                My favourite artists are always changing; right now they're
                probably Coldplay, RHCP, Dominic Fike, James Blake, and Carter
                Ace (that's a lot!)
              </li>
            </ol>
          </div>
        </div>
      </div>
    </section>
  </main>
  <script>
    document.getElementById("print-resume").addEventListener("click", () => {
      window.print();
    });
  </script>
</Layout>

<style>
  hr {
    @apply w-full border-[1px] border-neutral-700 print:border-neutral-500 mt-4 mb-4 rounded-full;
  }
</style>
